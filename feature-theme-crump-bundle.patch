+  border-color: var(--accent);
+  box-shadow: 0 0 0 2px color-mix(in srgb, var(--accent) 30%, transparent);
+}
+h1, h2, h3 { line-height: 1.2; letter-spacing: -0.01em; }
+h1 { font-weight: 600; }
